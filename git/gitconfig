[include]
  path = ~/.gitconfig.local
[push]
  default = current
[pull]
  rebase = true
[core]
  editor = nvim
[commit]
  gpgsign = true
[apply]
  whitespace = fix
[alias]
  ls = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
